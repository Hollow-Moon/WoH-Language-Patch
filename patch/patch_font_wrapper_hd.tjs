class FontWrapperHD extends global.FontWrapper
{
	function FontWrapperHD(font, layer)
	{
		super.FontWrapper(...);
	}

	property height
	{
		getter
		{
			return this.layer.window.unscaleHeight(super.height);
		}
		setter(v)
		{
			super.height = this.layer.scaleHeight(v);
		}
	}

	function getTextHeight()
	{
		return this.layer.window.unscaleHeight(super.getTextHeight(...));
	}

	function getTextWidth()
	{
		var factor = this.layer.stretch? global.wideFactor : 1;
		return this.layer.window.unscaleHeight(super.getTextWidth(...)) / factor;
	}

	function getGlyphDrawRect()
	{
		if (typeof(this.font.getGlyphDrawRect) !== "Object")
		{
			return;
		}
		var rect = super.getGlyphDrawRect(...);
		rect.setSize(this.layer.window.unscaleHeight(rect.width), this.layer.window.unscaleHeight(rect.height));
		return rect;
	}

	function getEscWidthX()
	{
		return this.layer.window.unscaleHeight(super.getEscWidthX(...));
	}

	function getEscWidthY()
	{
		return this.layer.window.unscaleHeight(super.getEscWidthY(...));
	}

	function getEscHeightX()
	{
		return this.layer.window.unscaleHeight(super.getEscHeightX(...));
	}

	function getEscHeightY()
	{
		return this.layer.window.unscaleHeight(super.getEscHeightY(...));
	}
}
